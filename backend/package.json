{
  "name": "dom-khvoi-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Dom Khvoi orders",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "bot": "node bot.js",
    "dev:bot": "nodemon bot.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:server": "jest tests/server.test.js",
    "test:bot": "jest tests/bot.test.js",
    "copy-frontend": "node ../../copy-frontend.js",
    "setup": "npm install && npm run copy-frontend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "telegraf": "^4.15.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "telegram",
    "bot",
    "orders",
    "ecommerce"
  ],
  "author": "Dom Khvoi",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ]
  }
}
